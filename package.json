{
  "name": "devdrive",
  "version": "1.0.0",
  "description": "A starter kit with Node.js, Express, TypeScript, and TypeORM or Prisma",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && node dist/server.js",
    "build": "tsc",
    "start:dev": "tsc && concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "start:prod": "SET NODE_ENV=production && npm start", "typeorm": "typeorm-ts-node-esm -d ./src/config/data.source.ts",
    "m:gen": "npm run typeorm migration:generate",
    "m:run": "npm run typeorm migration:run",
    "generate": "node cli/generate.js"
  },
  "dependencies": {
    "@types/ejs": "^3.1.5",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.41",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^16.18.113",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "commander": "^8.3.0",
    "concurrently": "^9.0.1",
    "ejs": "^3.1.6",
    "nodemon": "^3.1.7",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
